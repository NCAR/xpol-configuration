#! /bin/csh

set today = `date -u +%Y%m%d`

mkdir -p $PROJ_DIR/data/logs/errors
cd $PROJ_DIR/data/logs/errors
mkdir -p $today
cd $today

running "xpold"
if ($status == 1) then
  xpold -p >>& xpold.log &
endif

